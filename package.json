{
  "name": "api.payments.micro",
  "version": "0.0.1",
  "main": "app.js",
  "now": {
    "name": "payments-api",
    "public": false,
    "alias": [
      "dev.payments.xyz"
    ],
    "env": {
      "STRIPE_PRIVATE_KEY": "STRIPE_PRIVATE_KEY_VALUE",
      "GRAPHCOOL_URI": "GRAPHCOOL_URI_VALUE",
      "MANDRILL_API_KEY": "MANDRILL_API_KEY_VALUE"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:leojquinteros/payments-api.git"
  },
  "scripts": {
    "start": "micro -p ${PORT:-3030}",
    "lint": "xo",
    "test": "npm run lint && ava"
  },
  "xo": {
    "extends": "prettier"
  },
  "engines": {
    "node": "^7.7.3"
  },
  "dependencies": {
    "apollo-client": "1.9.2",
    "graphql-tag": "^2.4.2",
    "mandrill-api": "^1.0.45",
    "micro": "latest",
    "micro-cors": "^0.0.4",
    "microrouter": "^2.1.1",
    "moment": "^2.18.1",
    "node-fetch": "^1.7.2",
    "stripe": "^4.23.1"
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.19.1",
    "eslint-config-prettier": "^1.7.0",
    "prettier": "^1.2.2",
    "request-promise": "^4.2.0",
    "test-listen": "^1.0.2",
    "xo": "^0.18.1"
  }
}
